# Cybersecurity News Monitor Configuration
# Copy this file to .env and update with your values
# NEVER commit the actual .env file!

# GitHub Configuration (for issue creation)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=starkarthikr/cybersecurity-news-monitor

# AI/LLM Configuration (for content analysis)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000

# Monitoring Configuration
MONITOR_INTERVAL_HOURS=6
ENABLE_NOTIFICATIONS=true
MAX_ARTICLES_PER_RUN=50

# News Source URLs
THEHACKERNEWS_RSS=https://feeds.feedburner.com/TheHackersNews
BLEEPINGCOMPUTER_RSS=https://www.bleepingcomputer.com/feed/
SECURITYWEEK_RSS=https://www.securityweek.com/feed/
KREBS_RSS=https://krebsonsecurity.com/feed/

# Notification Settings (optional)
SLACK_WEBHOOK_URL=
EMAIL_RECIPIENT=
DISCORD_WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO
LOG_FILE=cybersec_monitor.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Web Scraping Configuration
USER_AGENT=CyberSec-News-Monitor-Bot/1.0
REQUEST_TIMEOUT=30
REQUEST_DELAY_SECONDS=2
MAX_RETRIES=3
RESPECT_ROBOTS_TXT=true

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_HOURS=24
CACHE_DIR=.cache

# Data Storage
DATA_DIR=data
OUTPUT_FORMAT=json
SAVE_RAW_HTML=false
