# Cybersecurity News Monitor Configuration
# Copy this file to .env and update with your values
# NEVER commit the actual .env file!

# OpenRouter API Configuration (REQUIRED)
# Get your free API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alternative variable name (also supported)
# API_KEY=your_openrouter_api_key_here

# GitHub Configuration (for issue creation and automation)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_REPO=starkarthikr/General-cybersecurity-news

# AI Model Configuration
# Default: meta-llama/llama-3.2-3b-instruct:free
# Other free models: google/gemma-2-9b-it:free, mistralai/mistral-7b-instruct:free
CUSTOM_MODEL=meta-llama/llama-3.2-3b-instruct:free

# Custom Analysis Prompt (optional)
CUSTOM_PROMPT=

# Monitoring Configuration
MONITOR_INTERVAL_HOURS=6
ENABLE_NOTIFICATIONS=true
MAX_ARTICLES_PER_RUN=50

# News Source URLs
THEHACKERNEWS_RSS=https://feeds.feedburner.com/TheHackersNews
BLEEPINGCOMPUTER_RSS=https://www.bleepingcomputer.com/feed/
SECURITYWEEK_RSS=https://www.securityweek.com/feed/
KREBS_RSS=https://krebsonsecurity.com/feed/
DARKREADING_RSS=https://www.darkreading.com/rss.xml

# Notification Settings (optional)
SLACK_WEBHOOK_URL=
EMAIL_RECIPIENT=
DISCORD_WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO
LOG_FILE=cybersec_monitor.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Web Scraping Configuration
USER_AGENT=CyberSec-News-Monitor-Bot/2.0
REQUEST_TIMEOUT=90
REQUEST_DELAY_SECONDS=2
MAX_RETRIES=3
RESPECT_ROBOTS_TXT=true

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_HOURS=24
CACHE_DIR=.cache

# Data Storage
DATA_DIR=data
REPORTS_DIR=reports
OUTPUT_FORMAT=markdown
SAVE_RAW_HTML=false
